html, body, .container-table {
  height: 100%;
}
.container-table {
  display: table;
}
.vertical-center-row {
  display: table-cell;
  vertical-align: middle;
}
.portfolio-item {
  margin-bottom: 25px;
}
body {
  background-color: <%= Setting.find_by_key(:background_color).value %>;
  color: #ecf0f1;
  line-height: 1;
}
a, a:focus {
  color: #fff;
}
a:hover {
  color: #ecf0f1;
}

.description {
  color: #ecf0f1;
  font-size: 14px;
}